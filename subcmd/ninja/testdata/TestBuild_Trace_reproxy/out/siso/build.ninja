rule remote_action
  command = python3 ../../tools/action.py ${in} ${out}

rule local_action
  command = python3 ../../tools/action.py ${in} ${out}

build gen/remote/foo.out: remote_action ../../foo.in
build gen/local/foo.out: local_action ../../foo.in

build all: phony gen/remote/foo.out gen/local/foo.out

build build.ninja: phony
