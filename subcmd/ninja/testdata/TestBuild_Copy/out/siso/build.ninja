rule copy
  command = ln -f ${in} ${out} 2>/dev/null || (rm -rf ${out} && cp -af ${in} ${out})

build gen/file: copy ../../file
build gen/cache: copy ../../cache

build all: phony gen/file gen/cache

build build.ninja: phony

